SHELL=/bin/bash

# Backup.
@weekly       backup-webservers

# Cleaning.
@reboot       rm -fv "$HOME/.lesshst"
@reboot       rm -fv "$HOME/.mysql_history"
@reboot       rm -fv "$HOME/.q3a/qkey"
@monthly      find "$HOME" -name "octave-core" -print -delete
@monthly      find "$HOME" -name ".unison.*" -print -delete

# Virus scan.
0 18 1 */3 *  clamscan -r "$HOME" &> "$HOME/TODO/Virus Scan $(date --rfc-3339=seconds).log"
